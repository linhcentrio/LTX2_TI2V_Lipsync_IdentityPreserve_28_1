# ============================================
# LTX2 T2I2V Lipsync - Environment Configuration
# ============================================

# ============================================
# ComfyUI Configuration
# ============================================
COMFYUI_URL=http://127.0.0.1:8188
COMFYUI_PORT=8188
COMFYUI_HOST=0.0.0.0

# ============================================
# S3 Storage Configuration
# ============================================
S3_BUCKET_NAME=your-bucket-name
S3_ENDPOINT_URL=https://s3.amazonaws.com
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1

# Optional: S3 custom endpoint (e.g., DigitalOcean Spaces, MinIO)
# S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# ============================================
# RunPod Configuration
# ============================================
RUNPOD_API_KEY=your-runpod-api-key
RUNPOD_ENDPOINT_ID=your-endpoint-id

# ============================================
# Model Paths (Optional - auto-detected)
# ============================================
LTX2_MODEL_PATH=/workspace/models/ltx-video-2b-v0.9.safetensors
FLUX_MODEL_PATH=/workspace/models/flux1-dev.safetensors
WAV2LIP_MODEL_PATH=/workspace/models/wav2lip.pth

# ============================================
# Processing Configuration
# ============================================
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=768
DEFAULT_NUM_FRAMES=120
DEFAULT_FPS=24
DEFAULT_CFG_SCALE=7.0
DEFAULT_STEPS=30

# ============================================
# Performance Tuning
# ============================================
MAX_BATCH_SIZE=1
ENABLE_FLASH_ATTENTION=true
USE_FP16=true
CUDA_VISIBLE_DEVICES=0

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/workspace/logs/app.log
ENABLE_DEBUG=false

# ============================================
# Timeout & Retry
# ============================================
COMFYUI_TIMEOUT=300
S3_UPLOAD_TIMEOUT=120
MAX_RETRIES=3
RETRY_DELAY=5

# ============================================
# Security
# ============================================
API_KEY=your-api-key-here
ALLOWED_ORIGINS=*
ENABLE_CORS=true

# ============================================
# Feature Flags
# ============================================
ENABLE_LIPSYNC=true
ENABLE_IDENTITY_PRESERVATION=true
ENABLE_FACE_ENHANCEMENT=false
ENABLE_UPSCALING=false